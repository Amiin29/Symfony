{% extends 'base.html.twig' %}
{% block body %}
  <style>
    .logg { margin-left:30%; width: 347px; rgb(22, 7, 36); } .log{
    margin-left:30%; width: 347px; rgb(22, 7, 36); }
  </style>
  <h1 class="log">
    Login
  </h1>
  {% if error %}
    <div>
      {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
  {% endif %}
  <form action="{{ path('login') }}" method="post" class="logg">
    <div class="input-group">
      <span class="input-group-addon"></span>
      <input type="text"
        id="username"
        name="_username"
        class="form-control"
        value="{{ last_username }}"
        aria-describedby="emailHelp"
        placeholder="Enter name" />
    </div>
<br>
    <div class="input-group">
      <span class="input-group-addon"></span>
      <input type="password"
        id="password"
        name="_password"
        class="form-control"
        placeholder="Password" />
    </div>

    <div class="form-group form-check">
    </div>

    <div style="margin-left: 275px;"><button type="submit" class="btn btn-primary" >Submit</button></div>
  </form>
{% endblock %}