{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-xxl flex-grow-1 container-p-y">
		<h3>Listes des catégories</h3>
		<a href="{{url('app_ajouter_categorie')}}"><button type="button" class="btn rounded-pill btn-primary">Ajouter</button></a><br>
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Numero</th>
					<th>Categorie name</th>              
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						<td>{{loop.index}}</td>
						<td>{{categorie.nomCategorie}}</td>
					
                    
						<td>
                            <a class="btn rounded-pill btn-warning" href="{{url('app_modifier_categorie', {'id':categorie.id})}}">Modifier</a>
							<a class="btn rounded-pill btn-danger" data-bs-toggle="modal" data-bs-target="#myModal">Supprimer</a>
							<div class="modal" id="myModal">
								<div class="modal-dialog">
									<div class="modal-content">

									<!-- Modal Header -->
									<div class="modal-header">
										<h4 class="modal-title">Suppression d'un Categorie</h4>
									</div>

									<!-- Modal body -->
									<div class="modal-body">
										Cette action est irréversible !
										Voulez-vous supprimer ce categorie ?
									</div>

									<!-- Modal footer -->
									<div class="modal-footer">
										<a class="btn rounded-pill btn-danger" href="{{url('app_supprimer_categorie', {'id':categorie.id})}}">Confirmez</a>
										<a class="btn btn-secondary" data-bs-dismiss="modal">Annuler</a>
									</div>

									</div>
								</div>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
