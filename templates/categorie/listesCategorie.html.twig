                            <a class="btn rounded-pill btn-warning" href="{{url('app_modifier_categorie', {'id':categorie.id})}}">Modifier catégorie</a>
							<div class="modal" id="myModal">
								<div class="modal-dialog">
									<div class="modal-content">								

									</div>
								</div>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
