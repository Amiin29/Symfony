{% extends 'base.html.twig' %}

{% block title %}Modification d'un Article


{% endblock %}
{% block body %}

<style>
body {
    font-family: Helvetica;
    -webkit-font-smoothing: antialiased;
    background: rgb(203 210 218);
</style>
<br>
<div style="margin-left: 1000px;"> <a href="{{url('app_articles')}}"><button type="button" class="btn rounded-pill btn-success">Retour</button></a>
</div>
<h2>Modifier article</h2>
<br>
<div class="form-horizontal">
	{{ form_start(form) }}
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="nomLivre">Libelle</label>
			<div class="col-sm-10 ">
				{{form_widget(form.libelle, {'attr': {'class': 'form-control','type':'text', placeholder:'Libelle'}}) }}
			</div>
		</div>
		<div class="form-group ">
			<label class="control-label col-sm-2 " for="disponible">Disponible :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.disponible, {'attr': {'class': 'form-control','type':'text', placeholder:'Disponible'}}) }}
			</div>
		</div>
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="reference">Price :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.price, {'attr': {'class': 'form-control','type':'number', placeholder:'Price'}}) }}
			</div>
		</div>
	
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="marque">Marque :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.marque, {'attr': {'class': 'form-control','type':'text', placeholder:'Marque'}}) }}
			</div>
		</div>
	
	<div class=" form-group ">
			<label class="control-label col-sm-2 " for="categorie">Categorie :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.categorie, {'attr': {'class': 'form-control', placeholder:'marque'}}) }}
			</div>
		</div>
		
		<div class="form-group button">
			<div class="col-sm-offset-2 col-sm-10 ">
				<div style="margin-left: 855px;"><button type="submit" name="modifier" class="btn btn-primary">Confirmer</button></div>
			</div>
		</div>
	{{ form_end(form) }}
</div>

{% endblock %}
