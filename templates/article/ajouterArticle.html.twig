{% extends 'base.html.twig' %}

{% block title %}Ajout d'un livre


{% endblock %}
{% block body %}

<h2>Ajout d'un article</h2>
<a href="{{url('app_articles')}}"><button type="button" class="btn rounded-pill btn-success">Retour</button></a>
<div class="form-horizontal">
	{{ form_start(form) }}
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="libelle">Libelle :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.libelle, {'attr': {'class': 'form-control','type':'text', placeholder:'Le nom du Article'}}) }}
			</div>
		</div>
		<div class="form-group ">
			<label class="control-label col-sm-2 " for="disponible">Is disponible :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.disponible, {'attr': {'class': 'form-control','type':'text', placeholder:'Is disponible'}}) }}
			</div>
		</div>
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="price">Price :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.price, {'attr': {'class': 'form-control','type':'number', placeholder:'Price'}}) }}
			</div>
		</div>
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="marque">Marque :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.marque, {'attr': {'class': 'form-control','type':'text', placeholder:'marque'}}) }}
			</div>
		</div>

		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="categorie">Categorie :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.categorie, {'attr': {'class': 'form-control', placeholder:'marque'}}) }}
			</div>
		</div>
		
		<div class="form-group button">
			<div class="col-sm-offset-2 col-sm-10 ">
				<button type="submit" name="ajouter" class="btn btn-primary">Ajouter</button>
			</div>
		</div>
	{{ form_end(form) }}
</div>

{% endblock %}
