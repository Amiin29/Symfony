{% extends 'base.html.twig' %}

{% block title %}Ajout d'un livre


{% endblock %}
{% block body %}
<style>body {
    font-family: Helvetica;
    -webkit-font-smoothing: antialiased;
    background: rgb(203 210 218);</style>
<br>
<div style="margin-left: 1000px;"><a href="{{url('app_articles')}}"><button type="button" class="btn rounded-pill btn-success">Retour</button></a>
</div>
<h2>Ajout d'un article</h2>
<br>
<div class="form-horizontal">
	{{ form_start(form) }}
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="libelle">Libelle article :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.libelle, {'attr': {'class': 'form-control','type':'text', placeholder:'Libelle'}}) }}
			</div>
		</div>
		<div class="form-group ">
			<label class="control-label col-sm-2 " for="disponible">disponibilité article :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.disponible, {'attr': {'class': 'form-control','type':'text', placeholder:'disponibilité'}}) }}
			</div>
		</div>
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="price">Prix article:</label>
			<div class="col-sm-10 ">
				{{form_widget(form.price, {'attr': {'class': 'form-control','type':'number', placeholder:'Prix'}}) }}
			</div>
		</div>
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="marque">Marque article :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.marque, {'attr': {'class': 'form-control','type':'text', placeholder:'Marque'}}) }}
			</div>
		</div>

		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="categorie">Catégorie article:</label>
			<div class="col-sm-10 ">
				{{form_widget(form.categorie, {'attr': {'class': 'form-control', placeholder:'Catégorie'}}) }}
			</div>
		</div>
		
		<div class="form-group button">
			<div class="col-sm-offset-2 col-sm-10 " style="    margin-left: 1025px;">
				<button type="submit" name="ajouter" class="btn btn-primary">Ajouter artilce</button>
			</div>
		</div>
	{{ form_end(form) }}
</div>

{% endblock %}
